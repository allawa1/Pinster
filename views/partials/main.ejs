<main>
  <body>
    <div class="card mb-3">
      <img src="/img/tie dye.jpg" width="400px" max-width="400px" height="400px" class="card-img-top" alt="PINSTER">
      <div class="card-img-overlay">
        <img src="/img/Pinster logo.png" alt="Pinster">
      </div>
      <div class="card-body">
        <h5 class="card-title">Your DIY Project Board!</h5>
      </div>
    </div>
    <!--Login from Homepage and About Pinster Part-->
    <div class="row">
      <div class="col-sm-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">About PINSTER</h5>
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <h6 class="card-title">Search for diy projects...</h6>
                  <img src="/img/one pin.jpg" class="d-block w-100" alt="one pin">
                </div>
                <div class="carousel-item">
                  <h6 class="card-title">...add them to your personalized board...</h6>
                  <img src="/img/two pins.jpg" class="d-block w-100" alt="two pins">
                </div>
                <div class="carousel-item">
                  <h6 class="card-title">...and start working!</h6>
                  <img src="/img/bulb pin.jpg" class="d-block w-100" alt="bulb pin">
                </div>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="col-sm-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Join PINSTER</h5>
            <form>
              <fieldset>
                <legend>Login in or Create an Account</legend>
                <div class="form-group">
                  <label for="exampleInputEmail1">Email address</label>
                  <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                    placeholder="Enter your email address">
                  <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                    else.</small>
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Password</label>
                  <input type="password" class="form-control" id="exampleInputPassword1">
                </div>
                <div class="form-group form-check">
                  <input type="checkbox" class="form-check-input" id="exampleCheck1">
                  <label class="form-check-label" for="exampleCheck1">Keep me logged in</label>
                </div>
                <button type="submit" class="btn btn-primary">Login</button> or
                <a href="../auth/github" class="btn btn-primary">Login with Github</a> or
                <a href="/login" class="btn btn-primary">Create Account</a>
              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!--Reviews Part-->
    <div class="card-columns">
      <div class="card">
        <img src="/img/flower vase.jpg" class="card-img-top" alt="flower vase">
